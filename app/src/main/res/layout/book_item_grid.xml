<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="280dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/book_img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/book_rounded"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/otkan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="15dp"
        android:padding="2dp"
        android:background="@drawable/background_rating">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="center"
            app:srcCompat="@drawable/baseline_star_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/ratingOfBook"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="5.0"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="3dp"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O'tkan kunlar"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_img" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abdulla Qodiriy"
        android:textColor="#9e9e9e"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>